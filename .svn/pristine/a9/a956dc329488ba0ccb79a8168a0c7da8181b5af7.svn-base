<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8" trimDirectiveWhitespaces="true"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@taglib prefix="form" uri="http://www.springframework.org/tags/form" %>
<!DOCTYPE html>
<html lang="ko">
<head>
<title>글 등록</title>
</head>
<body>
<%@ include file="/WEB-INF/inc/top.jsp"%>
<div class="container border" style="border-radius: 20px;">
	<div class="page-header">
		<h3 align="center" style="margin:20px;">글 등록</h3>
	</div>
	<form:form action="qnaRegist.wow" id="freeForm" name="freeForm" modelAttribute="board" method="POST">
	<table class="table table-hover">
		<colgroup>
			<col width="20%" />
			<col/>
		</colgroup>
		<form:hidden path="boId" cssClass="" value="${sessionScope.USER_INFO.userId}"/>
		<tr>
			<th>제목</th>
			<td>
				<form:input path="boTitle" cssClass="form-control input-sm"/>
				<form:errors path="boTitle"/>
			</td>
		</tr>
		<tr>
			<th>작성자</th>
			<td>
			<form:hidden path="boWriter" value="${sessionScope.USER_INFO.userName}"/>
			${sessionScope.USER_INFO.userName}
			</td>
		</tr>
		<tr>
			<th>분류</th>
			<td>
				<form:select path="boCategory" id="Category" name="Category" cssClass="form-control input-sm">
					<option value="QNA">QnA</option>
					<option value="FREE">자유게시판</option>
					<option value="TIP">Tip</option>
					<c:if test='${sessionScope.USER_INFO.userRole eq "admin"}'>
					<option value="NOTICE">공지사항</option>
					</c:if>
				<form:errors path="boCategory"/>
				</form:select>
			</td>
		</tr>
		<tr>
			<th>문의</th>
			<td>
				<form:select path="boQnaCategory" cssClass="form-control input-sm">
					<option value="예약 문의">예약문의</option>
					<option value="홈페이지 문의">홈페이지 이용 문의</option>
					<option value="회원정보 문의">회원정보 문의</option>
				</form:select>
				<b>문의를 선택해주세요.</b>
			</td>
		</tr>
		<tr>
			<th>내용</th>
			<td><textarea rows="10" name="boContent" class="form-control"></textarea>
			<div class="text-center">
			<b>QnA게시판은 수정이 불가능합니다.</b>
			</div>
			</td>
		</tr>
	</table>
		<div class="text-center" style="margin-bottom: 30px;">
	       <a href="boardHome.wow" class="btn btn-dark">목록</a>
	       <button type="submit" class="btn btn-primary">저장</button>
	    </div> 
	</form:form>	
</div><!-- container -->
</body>
</html>


