<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<%@taglib prefix="form" uri="http://www.springframework.org/tags/form" %>
<%
	request.setCharacterEncoding("utf-8");
%>
<!DOCTYPE html>
<html lang="ko">
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<style type="text/css">
	.info {
		background-color: #f8f9fc;
		padding: 2.2rem 4rem;
		margin: 2rem 0;
		margin-bottom: 30px;
	}
	.new {
		background: #defbf8;
	    color: #176f66;
	    
	    display: inline-block;
	    margin-left: .2rem;
	    margin-right: .2rem;
	    padding: .3rem .6rem;
	    font-size: 0.8rem;
	}
	.hot {
		background: #fff1f3;
	    color: #de001b;
	    
	    display: inline-block;
	    margin-left: .2rem;
	    margin-right: .2rem;
	    padding: .3rem .6rem;
	    font-size: 0.8rem;
	}
	.limited {
	    background: #fbebde;
    	color: #c03f04;
    	
    	display: inline-block;
    	margin-left: .2rem;
	    margin-right: .2rem;
	    padding: .3rem .6rem;
	    font-size: 0.8rem;
	}
	.row {
		    padding-right: 15px;
    		padding-left: 15px;
	}
	
	.kong1 {
		margin: 20px;		
	}
	
	.items {
	
	display: inline-block;
	margin-top: 3px;
    margin-right: .8rem;
    margin-left: .8rem;
    padding: .1rem .2rem;
    padding-top: 0px;
    border: .1px solid #de001b;
    color: #de001b;
    height: 25px;
    
	}
	
</style>
</head>
<body>
<%@include file="/WEB-INF/inc/top.jsp"%>
<div class="container border" style="max-width: 1400px;">

	<c:if test='${sessionScope.USER_INFO.userId eq null}'>
		<div class="info"><span style="font-size: 1.2em; color: #00256c;">로그인하시면 잔여 마일리지를 확인할 수 있습니다.</span></div>
	</c:if>
	
	<c:if test='${sessionScope.USER_INFO.userId ne null}'>
		<div class="info"><span style="font-size: 1.2em; color: #00256c;">${sessionScope.USER_INFO.userId} 회원님의 마일리지 : ${sessionScope.USER_INFO.userMileage}</span></div>
	</c:if>
	
	<span style="font-size: 1.3em;">다양한 상품을 마일리지로 구매하실 수 있습니다.</span>
	<p class="text-info" style="font-size: small">* 한국 내 배송이 가능한 상품입니다.</p>
	
	<div class="row border-top border-bottom" style="margin-top: 15px; padding: 10px; padding-top: 77px; padding-bottom: 77px;">
		<div class="col-md-6">
			<img class="img-thumbnail" src="https://www.koreanair.com/content/dam/koreanair/ko/mileage-mall/logo-merchandise/B747_nametag_1.jpg">
		</div>
		<div class="col-md-6">
			<div class="row kong1">
				<h2><b style="color:black;">HL7461 네임택</b></h2>
			</div>
			<div class="row kong1">
				<h3><span style="font-weight: 700;">520,000 마일</span></h3>
			</div>
			<div class="row kong1">
				<p>B747-400 항공기의 Aircraft skin으로 제작된 네임택</p>
			</div>
			<div class="row border" style="padding: 1rem;">
				<select class="form-control input-sm" id="">
					<option value="FREE">옵션1</option>
				</select>
			</div>
			<div style="margin: 20px;"></div>
			<div class="row border" style="padding: 1rem;">
				<select class="form-control input-sm" id="">
					<option value="FREE">옵션1</option>
				</select>
			</div>
		</div>
	</div>
	<c:if test='${sessionScope.USER_INFO.userId ne null}'>
		<form:form action="insertMileage.wow" method="post" modelAttribute="reserve">
		  <div class="form-group row">
		    <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
		    <div class="col-sm-10">
		      <input type="text" readonly class="form-control-plaintext" name="bookBuyerEmail" value="${member.memMail}">
		    </div>
		  </div>
		  <div class="form-group row">
		    <label for="staticEmail" class="col-sm-2 col-form-label">Id</label>
		    <div class="col-sm-10">
		      <input type="text" readonly class="form-control-plaintext" name="bookId" value="${member.memId}">
		    </div>
		  </div>
		  <div class="form-group row">
		    <label for="inputPassword" class="col-sm-2 col-form-label">배송받을분</label>
		    <div class="col-sm-10">
		      <input type="text" class="form-control" name="bookBuyerName" value="${member.memName}">
		    </div>
		  </div>
		  <div class="form-group row">
		    <label for="inputPassword" class="col-sm-2 col-form-label">전화번호</label>
		    <div class="col-sm-10">
		      <input type="text" class="form-control" name="bookBuyerTel" value="${member.memHp}">
		    </div>
		  </div>
		  <div class="form-group row">
		    <label for="inputPassword" class="col-sm-2 col-form-label">받는분 주소  <input type="button" class="btn btn-primary btn-sm" onclick="fn_add()" value="검색"></input></label>
		    <div class="col-sm-10">
		      <input type="text" class="form-control" name="bookBuyerAddr" id="address_kakao" value="">
		    </div>
		  </div>
		  <div class="form-group row">
		    <label for="inputPassword" class="col-sm-2 col-form-label">우편번호</label>
		    <div class="col-sm-10">
		      <input type="text" class="form-control" name="bookBuyerPostcode" value="${member.memZip}">
		    </div>
		  </div>
		  	<div class="row justify-content-md-center kong1">
				<button type="submit" class="kongkongs">상품구매</button>
			</div>
		</form:form>
	</c:if>
</div>

<div style="margin: 200px;"></div>
<script src="//t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script>
<script type="text/javascript">
	function fn_add(){
	    new daum.Postcode({
	        oncomplete: function(data) { //선택시 입력값 세팅
	            document.getElementById("address_kakao").value = data.address; // 주소 넣기
	            document.getElementById("zip").value = data.zonecode; // 주소 넣기
	            document.getElementById("address_kakao").focus(); //상세입력 포커싱
	        }
	    }).open();
	}
</script>

<%@ include file="/WEB-INF/inc/footer.jsp"%>
</body>
</html>