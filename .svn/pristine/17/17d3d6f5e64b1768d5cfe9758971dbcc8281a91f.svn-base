<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8" trimDirectiveWhitespaces="true"%>
<%@taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@taglib prefix="form" uri="http://www.springframework.org/tags/form" %>
<!DOCTYPE html>
<html lang="ko">
<head>
<title>자유게시판 - 글 등록</title>
</head>
<body>
<%@ include file="/WEB-INF/inc/top.jsp"%>
<div class="container">
	<div class="page-header">
		<h3>콩콩게시판 - <small>글 등록</small></h3>
	</div>
	
	<form:errors path="board.*"/>
	
	<form:form action="freeRegist.wow" name="" modelAttribute="board" method="post">
	<table class="table table-striped table-bordered">
		<colgroup>
			<col width="20%" />
			<col/>
		</colgroup>
		<tr>
			<th>제목</th>
			<td>
				<form:input path="boTitle" cssClass="form-control input-sm"/>
				<form:errors path="boTitle"/>
			</td>
		</tr>
		<tr>
			<th>작성자</th>
			<td>
			<form:input path="boWriter" cssClass="form-control input-sm"/>
			<form:errors path="boWriter"/>
			</td>
		</tr>
		<tr>
			<th>비밀번호</th>
			<td>
			     <form:password path="boPass" cssClass="form-control input-sm"/>
						<form:errors path="boPass" />
				  <span class="text-danger">
				  <br>
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span> 
            수정 또는 삭제시에 필요합니다.
          </span> 
			</td>
		</tr>
		<tr>
			<th>분류</th>
			<td>
			<!-- 카테고리 변경필요 -->
				<form:select path="boCategory" cssClass="form-control input-sm">
					<option value="">FREE</option>
					<option value="">QNA</option>
					<option value="">NOTICE</option>
					<%-- <form:options items="${categories}" itemValue="commCd" itemLabel="commNm" /> --%>
				</form:select>
				<form:errors path="boCategory" />
			</td>
		</tr>
		<tr>
			<th>내용</th>
			<td><textarea rows="10" name="boContent" class="form-control"></textarea>
			</td>
		</tr>
	</table>
	<div class="row">
		<div class="pull-left">
              <a href="boardHome.wow" class="btn btn-default btn-sm"> 
                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                &nbsp;&nbsp;목록
              </a>
            </div>
            <div class="pull-right">
              <button type="submit" class="btn btn-sm btn-primary" > 
                <span class="glyphicon glyphicon-save" aria-hidden="true"></span>
                &nbsp;&nbsp;저장
              </button>
            </div> 
		</div>
	</form:form>	
</div><!-- container -->
</body>

