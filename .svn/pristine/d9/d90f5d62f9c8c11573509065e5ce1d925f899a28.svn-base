//rowSizePerPage 변경
$('#id_rowSizePerPage').change(function(e){
	e.preventDefault();
	$this = $(this);
	console.log('select val', $this.val());
 $frm.find("input[name=curPage]").val(1);
 $frm.find("input[name=rowSizePerPage]").val($this.val());
 $frm.submit();
	
});





//멤버 삭제

function fn_memDel(id) {
	var url = '<c:url value="adminMemDel.wow"/>';
	
	$.ajax({
		url: url,		
		data : {"id" : id},		
		type : "POST",
		success: function(){ //data = 6자리 랜덤 키
		 swal("삭제가 완료되었습니다.","확인 후 새로고침 해주세요","success");
		},
		error: function(request, status, error){
			
		}
	}); //ajax
	
	//location.reload();
}

<%-- <%=request.getContextPath()%>/admin/memPrivacy.wow --%>







</script>
</html>