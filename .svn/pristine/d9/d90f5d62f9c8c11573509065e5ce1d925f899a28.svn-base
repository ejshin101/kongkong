//pagination의 a 링크를 클릭했을 때
$('nav ul.pagination a[data-page]').click(function(e){
 e.preventDefault();
	$this = $(this);
 //console.log('this',this.dataset.page);  //javascript 객체
 //console.log('$this',$this.data('page')); //jQuery 객체
 
